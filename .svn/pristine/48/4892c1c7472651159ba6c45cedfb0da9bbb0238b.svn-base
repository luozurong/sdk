/*重置样式*/
html,body,div,p,ul,li,h1,h2,h3,h4,form,input{
	border: none;
	margin: 0;
	padding: 0;
	font-weight: normal;
}
/*强制换行*/
div,span{
    word-break: break-all;
}
body{
	font-family: "microsoft yahei";
	font-size: .16rem;
	color: #333333;
}
li{list-style: none;}
input{
	outline: none;
	/*去ios内阴影、圆角*/
	-webkit-appearance: none; 
	border-radius: 0;
}
a{text-decoration: none;color:#000;}
.clearfix:before,.clearfix:after{
	display:table;
	content:"";
}
input, textarea, a {
    -webkit-tap-highlight-color: transparent;
}
textarea {
  -webkit-appearance: none;
}
.clearfix:after{
	clear:both;
}
.clearfix{
	*zoom:1;
}
.fl{
	float: left;
}
.fr{
	float: right;
}

