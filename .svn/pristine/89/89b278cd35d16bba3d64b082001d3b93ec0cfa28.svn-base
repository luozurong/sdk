var vue = new Vue({
    el: '#apply',
    data: {
        name: "小菜鸟开发员",
        addApplyNo: 1,
        picked: "-1",
        sdkItem: "",
        sdkItemNoData: false,
        company:"",
        joinAccount:"",
        joinPassword:"",
        createTime:"",
        verifyStatus: "",
        terraceItemFlag:true,
        terraceAreaList:"",
        oneStatus: true,
        twoStatus: false,
        terraceFlag: false,
        hostUrl: "http://192.168.51.24:8090/lxjsdkApi/getApplicationList?str=",
        hostUrlDel: "http://192.168.51.24:8090/lxjsdkApi/delApplication?str=",
        hostUrlTerrace: "http://192.168.51.24:8090/lxjsdkApi/getPlatFormList?str=",
        time_stamp: new Date().getTime()

    },
    filters: {
	    status: function (value) {
	        if (!value) return '';
	      	if(value == 0){
	      		value = "审核中";
	      	}else if(value == 1){
	      	    value = "未通过";
	        }else if(value == 2){
	      	    value = "通过";
	        }
	        return value;
	    },
	    time: function(value){
            if (!value) return '';
	    	  var da = value;
	          da = new Date(da);
	          var year = da.getFullYear();
	          var month = da.getMonth()+1;
	          var date = da.getDate();
	          var value = [year,month,date].join('-');
	          return value;
		    }
	  	},
    methods:{
    	addApply:function(num){ //tab切换
    		this.addApplyNo = num;
    		if(num == 1){
    			this.oneStatus = true;
    			this.twoStatus = false;
    		}else{
    			this.oneStatus = false;
    			this.twoStatus = true;
    		}
    	},
    	sdkAjax:function(pickedNum){ //我的应用列表
    		var params = {
    			body:{
					verifyStatus: this.picked
    			},
    			header:{
    				token:"00",
    				time_stamp:this.time_stamp
    			}
    		}
    		var paramsStr = encodeURI(JSON.stringify(params));
    		var httpURL = this.hostUrl+paramsStr
    		this.$http.jsonp(httpURL,{
			    emulateJSON: true,
				method: "get",
				dataType: "jsonp",
				jsonp: "jsoncallback",
			}).then(function(res){  
            	var data = res.body;
            	this.sdkItem = data.list;
            	if(data.list.length == 0){
            		this.sdkItemNoData = true;
            	}else{
            		this.sdkItemNoData = false;
            	}  
            },function(res){  
                console.log(res);  
            });  
    	},
        delAjax:function(index){ //删除我的应用
            var id = this.sdkItem[index].id;
            var params = {
                body:{
                    id: id
                },
                header:{
                    token:"00",
                    time_stamp:this.time_stamp
                }
            }
            var paramsStr = encodeURI(JSON.stringify(params));
            var httpURL = this.hostUrlDel+paramsStr
            this.$http.jsonp(httpURL,{
                emulateJSON: true,
                method: "get",
                dataType: "jsonp",
                jsonp: "jsoncallback",
            }).then(function(res){  
                if(res.body.result == 0){
                    Vue.delete(this.sdkItem,index);
                }
            },function(res){  
                 
            });         
        },
        terraceAjax:function(){ //获取平台账号密码
            var params = {
                body:{},
                header:{
                    token:"00",
                    time_stamp:this.time_stamp
                }
            }
            var paramsStr = encodeURI(JSON.stringify(params));
            var httpURL = this.hostUrlTerrace+paramsStr
            this.$http.jsonp(httpURL,{
                emulateJSON: true,
                method: "get",
                dataType: "jsonp",
                jsonp: "jsoncallback",
            }).then(function(res){  
                console.log(res);
                this.company = res.body.platFormJoin.company;
                this.joinAccount = res.body.platFormJoin.joinAccount;
                this.joinPassword = res.body.platFormJoin.joinPassword;
                this.createTime = res.body.platFormJoin.createTime;
                this.verifyStatus = res.body.platFormJoin.verifyStatus;
                this.terraceAreaList = res.body.platFormJoin.platFormJoinAreaList
                /*if(res.body.list.length == 0){
                    this.terraceItemFlag = true;
                    this.terraceFlag = true;
                }else{
                    this.terraceItemFlag = false;
                    this.terraceFlag = true;
                }*/
            },function(res){  
                 
            });
        },
        addEstate:function(){ //添加小区
            sessionStorage.setItem("estateFlag",1);
            sessionStorage.setItem("inputEstateFlag",0);
            sessionStorage.setItem("company","广州合力正通");
        },
        inputEstate:function(){
             sessionStorage.setItem("inputEstateFlag",1);
             sessionStorage.setItem("estateFlag",0);
        }
    },
    mounted:function(){
    	this.sdkAjax(this.pickedNum);
        this.terraceAjax();
    },
    watch:{
    	picked:function(newValue,oldValue){
    		this.sdkAjax(newValue);
    	}
    }
})
