<script>
	$(function(){
		top.Dialog.close()
	})
	function handler1(){
		top.Dialog.alert("点击了确定")
	}
	function open1(){
		var diag = new top.Dialog();
		diag.Title = "取消按钮点击事件";
		diag.CancelEvent = function(){
			top.Dialog.alert("点击了取消")
			diag.close();
			};
		diag.URL = "lesson/chapter3-2-content1.html";
		diag.ShowButtonRow=true;
		diag.show();
	}
	function open2(){
		var diag = new top.Dialog();
		diag.Title = "得到输入值";
		diag.URL = "lesson/chapter3-2-content2.html";
		diag.OKEvent = function(){
			var inputValue = diag.innerFrame.contentWindow.document.getElementById('a').value;
			top.Dialog.alert(inputValue)
			diag.close();
			};
		diag.show();
		var doc=diag.innerFrame.contentWindow.document;
		doc.open();
		doc.write('<html><body><input id="a" type="text"/>请在文本框里输入一些值</body></html>') ;
		doc.close();
	}
	function open3(){
		var diag = new top.Dialog();
		diag.Title = "更改按钮";
		diag.URL = "lesson/chapter3-2-content2.html";
		diag.ShowButtonRow=true;
		diag.OkButtonText=" 提 交 ";
		diag.show();
	}
	function open4(){
		var diag = new top.Dialog();
		diag.Title = "创建其它按钮";
		diag.URL = "lesson/chapter3-2-content2.html";
		diag.show();
		diag.addButton("next"," 按 钮 ",function(){
			var doc=diag.innerFrame.contentWindow.document;
			doc.open();
			doc.write('<html><body>进入了下一步</body></html>') ;
			doc.close();
		})
	}
	function open5(){
		var diag = new top.Dialog();
		diag.Title = "提交表单并刷新父页";
		diag.URL = "lesson/chapter3-2-content4.html";
		diag.show();
	}
	function open6(){
		var diag = new top.Dialog();
		diag.Title = "手动关闭窗口并刷新页面";
		diag.URL = "javascript:void(document.write('点击确定按钮'))";
		diag.ShowButtonRow=true;
		diag.OkButtonText=" 确 定 ";
		diag.OKEvent = function(){
			top.Dialog.alert("成功提交",function(){window.location.reload()})
			diag.close();
		};
		diag.show();
	}
	function open7(){
		var diag = new top.Dialog();
		diag.Title = "手动关闭窗口";
		diag.URL = "lesson/chapter3-2-content3.html";
		diag.ShowButtonRow=true;
		diag.ShowOkButton=false;
		diag.CancelButtonText=" 关 闭 ";
		diag.show();
	}
</script>
